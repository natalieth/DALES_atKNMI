&RUN
iexpnr  = 001
lwarmstart  = .false.
lresettime  = .false.
ltotruntime  = .false.
startfile  = 'initd000h00mx000y000.001'
runtime  = 86400.0
trestart  = 86400.0
dtmax = 10
ladaptive = .true.
peclet = 0.1
irandom = 1
randthl = 0.01
randqt = 2.5e-5
nsv = 2
nprocx = 4
nprocy = 7
/

&DOMAIN
itot = 196
jtot = 196
kmax  = 160
kmax_soil  = 4         ! soil layers for new LSM

xsize = 15000
ysize = 15000

xlat  = 51.971
xlon  = 4.927
xday  = 190
xtime  = 0
/

&PHYSICS
ps = 1e5
thls = 300       ! Surface thl
lmoist = .true.
lcoriol = .false.
ltimedep = .true.
iradiation = 4      ! 4 = RRTMG
igrw_damp = 3       ! 3 = nudge (damping) to mean profile
timerad = 60        ! Interval (sec) of radiation calls
/

&NAMSURFACE
!isurf = 11           ! 1 = LSM, 2 = Ts+q=qsat(Ts), 4 = thl+qt flux, calculate u*
! l_vg  = .true.      ! Van Genuchten parameterisation
!z0mav = 0.075       ! Fred; mean regional roughness heat
!z0hav = 0.003       ! Fred;
!Cskinav = 0
!lambdaskinav = 10   ! ECMWF
!Qnetav = 0          ! Why needed?
!Wlav = 0            ! Water on leaves
!rsminav = 100
!rssoilminav = 50
!LAIav = 2.5         ! Fig. 4.6 MvT
!cvegav = 1
!albedoav = 0.23     ! Fred;
!gDav = 0
!rootfav = 0.40 0.30 0.30 0.00
!tsoildeepav  = 282.5419921875
!tsoilav  = 289.31946 290.28134 285.38647 282.189  
!phiwav  = 0.448 0.448 0.448 0.448

! gammasat  = 2.87e-06
! nvg  = 1.1
! Lvg  = -1.977
! alphavg  = 3.67
! phir  = 0.01
!phi  = 0.52
!phiwp  = 0.279
!phifc  = 0.448

!z0mav = 0.05        ! Fig. 4.8 MvT
!z0hav = 0.001       ! z0m / 6.4e3, Eq. 4.2 MvT
!albedoav = 0.25     ! Fig. 4.9 MvT
!lambdaskinav = 1.5  ! Fig. 4.11 MvT; night !! Note BvS: 1.5 is very low....

! for new LSM scheme
isurf = 11
z0mav = 1e-4    ! not used
z0hav = 1e-4    ! not used
albedoav = 0.17 ! Albedo is not yet spatially variable
/

&DYNAMICS
cu =  0.
cv =  0.

iadv_mom = 2 ! switch to second as suggested
iadv_tke = 2
iadv_thl = 2
iadv_qt  = 2
iadv_sv  = 2

lqlnr = .false.
/

&NAMNUDGE
lnudge=.true.
tnudgefac=10800
/

&NAMSUBGRID
ldelta = .false.
!cm = 0.12
cn = 0.76
ch1 = 1.
!ch2 = 2.
!ce1 = 0.19
!ce2 = 0.51
!sgs_surface_fix = .false.
/

&NAMMICROPHYSICS
imicro = 6          ! 2 = warm, 5=simpleice
l_sb = .true.       ! true = Seiffert/Beheng, false = KK00
Nc_0 = 300e6        ! cloud droplet conventration
/

&NAMRADIATION
lCnstAlbedo = .true.
/

&NAMBULKMICROSTAT
lmicrostat = .true.
!lascii = .false.
timeav = 600
dtav = 600
/

&NAMCHECKSIM
tcheck = 120
/

&NAMNETCDFSTATS
lnetcdf = .true.
lsync = .true.
/

&NAMTIMESTAT
ltimestat = .true.
!lascii = .false.
dtav = 600
/

&NAMGENSTAT
lstat  = .true.
!lascii = .false.
dtav   = 600
timeav = 600
/

&NAMBUDGET
lbudget = .false.
!lascii  = .false.
dtav    = 600.
timeav  = 600.
/

&NAMSTATTEND
ltend  = .true.
!lascii = .false.
dtav   = 600
/

&NAMRADSTAT
lstat = .true.
!lascii = .false.
dtav   = 600
timeav = 600
/

&NAMLSMSTAT
lstat = .true.
dtav   = 600
timeav = 600.
/

&NAMSAMPLING
lsampcl    = .false.
lsampco    = .false.
lsampup    = .false.
lsampbuup  = .false.
lsampcldup = .false.
dtav   = 600
timeav = 600.
/

&NAMCROSSSECTION
lcross = .true.
dtav = 60
!lxy=.false.
!lxz=.false.
!lyz=.false.
/

!&NAMCOLUMNSTAT
!lcolumnstat = .true.
!column_x = 2500 12500 2500 12500 7500
!column_y = 2500 2500 12500 12500 7500
!dtsamp = 10
!dtav = 600
!/

!&NAMLSMCROSSSECTION
!lcross = .true.
!dtav = 60
!crossheight = 1
!/

&NAMCAPE        ! for liquid,rain,total water path LWP, RWP, TWP
lcape = .true.
dtav  = 60
/

! New LSM, used if &NAMSURFACE : isurf = 11
&NAMLSM
lheterogeneous = .false.
lfreedrainage = .true.
dz_soil  = 2.89, 1.0, 0.28, 0.07
iinterp_t = 1
iinterp_theta = 4
/
! Homogeneous initialisation of LSM, when lheterogeneous = .false.

&NAMLSM_HOMOGENEOUS
! Sub-grid tile fractions, should sum to 1:
c_low = 0.90 ! estimation for Cabauw
c_high = 0.03
c_bare = 0.03
c_water = 0.04

! Roughness lengths for the sub-grid tiles:
z0m_low = 0.075
z0m_high = 1.
z0m_bare = 0.01
z0m_water = 0.001

z0h_low = 0.003
z0h_high = 1.
z0h_bare = 0.001
z0h_water = 0.0001

! Conductivity skin layer for stable (s) and unstable (us) conditions:
lambda_s_low = 10.
lambda_s_high = 15.
lambda_s_bare = 15.

lambda_us_low = 10.
lambda_us_high = 40.
lambda_us_bare = 15.

! Leaf area index low and high vegetation:
lai_low = 2.5
lai_high = 4.

! Minimum canopy or soil resistance:
rs_min_low = 100.
rs_min_high = 250.
rs_min_bare = 50.

! Initial profiles of soil temperature and soil moisture (from bottom to top):
t_soil_p  = 290.2785  290.84714 288.23413 283.55203
theta_soil_p  = 0.52124027 0.52523103 0.50367084 0.52213797

! Soil index in `van_genuchten_parameters.nc`:
soil_index_p  = 17. 17. 17. 17.

! Coefficients used to calculate the root fraction.
ar_low = 10.739
br_low = 2.608

ar_high = 4.453
br_high = 1.631

! Coefficient for canopy resistance high vegetation
gD_high = 0.0003

! Fixed surface temperature open water:
tskin_water = 290
/
